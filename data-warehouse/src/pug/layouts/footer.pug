//-------------------------------------------------------------------------------
  @name: Footer
  -------------------------------------------------------------------------------//

-
  data = {
    trial: {
      title: 'Try for free!',
      desc: 'Get limited 1 week free try our features!',
      learnMore: {
        to: '#learn-more',
        txt: 'Learn More'
      },
      demo: {
        to: '#request-demo',
        txt: 'Request Demo'
      },
    },
    logo: {
      to: 'index.html',
      src: 'logo-text.svg',
      alt: 'Data Warehouse'
    },
    about: {
      address: 'Warehouse Society, 234 Bahagia Ave Street PRBW 29281',
      email: 'info@warehouse.project',
      phone: '1-232-3434 (Main)'
    },
    menu: [
      {
        to: '#about',
        title: 'About',
        nav: [
          {
            to: '#profile',
            title: 'Profile'
          },
          {
            to: '#features',
            title: 'Features'
          },
          {
            to: '#careers',
            title: 'Careers'
          },
          {
            to: '#dw-news',
            title: 'DW News'
          },
        ]
      },
      {
        to: '#help',
        title: 'Help',
        nav: [
          {
            to: '#support',
            title: 'Support'
          },
          {
            to: '#signup',
            title: 'Sign up'
          },
          {
            to: '#guide',
            title: 'Guide'
          },
          {
            to: '#reports',
            title: 'Reports'
          },
          {
            to: '#qa',
            title: 'Q&A'
          },
        ]
      },
    ],
    sosmed: {
      to: '#',
      title: 'Social Media',
      item: [
        {
          to: '#facebook',
          class: 'facebook'
        },
        {
          to: '#twitter',
          class: 'twitter'
        },
        {
          to: '#instagram',
          class: 'instagram'
        }
      ]
    },
    bottom: {
      copyright: '&copy; Datawarehouse&trade;, 2020. All rights reserved.<br />Company Registration Number: 21479524.',
      btn: {
        to: ''
      }
    }
  }

//footer
.footer
  .footer__trial
    .container
      .footer__trial__txt
        h2.footer__trial__title !{data.trial.title}
        p.footer__trial__desc !{data.trial.desc}
      .footer__trial__btn
        ='\n'
        a.btn.btn--secondary(href=data.trial.learnMore.to) !{data.trial.learnMore.txt}
        ='\n'
        a.btn.btn--white(href=data.trial.demo.to) !{data.trial.demo.txt}
          ='\n'
          i.fi.fi-arrow-right
          ='\n'
  //footer-menu
  .footer__menu
    .container
      .footer__wrapper
        .footer__list.js-accordion-footer
          each val in data.menu
            .footer__list__item
              h4.footer__title !{val.title}
              ul.footer__nav
                each item in val.nav
                  li.footer__item
                    ='\n'
                    a.footer__link(href=item.to) !{item.title}
                  ='\n'
        .footer__contact
          h4.footer__contact__title !{data.sosmed.title}
          ul.footer__contact__nav
            each sosmedItem in data.sosmed.item
              li.footer__contact__item(class=sosmedItem.class)
                ='\n'
                a.footer__contact__link(href=sosmedItem.to)
                  ='\n'
                  i.fi(class='fi-'+sosmedItem.class)
                ='\n'
      .footer__about
        ='\n'
        a.footer__logo(href=data.logo.to)
          ='\n'
          img.footer__logo__el(src="assets/img/logo/"+data.logo.src alt=data.logo.alt)/
          ='\n'
        .footer__about__txt
          p.footer__about__txt__address !{data.about.address}
          p.footer__about__txt__email !{data.about.email}
        p.footer__about__txt__phone !{data.about.phone}
      ='\n'
  ='\n'
  //footer-copyright
  .footer__copyright
    .container
      p.footer__copyright__txt !{data.bottom.copyright}
  ='\n'
//end-footer
include ../components/floating-chat.pug