//footer
.footer
  .container
    .footer__menu.js-footer-accordion
      each val in dataFooter.menu
        .footer__menu__item
          if val.title
            h3.footer__title !{val.title}
          ul.footer__nav
            each item in val.nav
              li.footer__nav__item
                ='\n'
                a.footer__nav__link(href=item.link) !{item.title}
                ='\n'
    .footer__about
      ='\n'
      a.footer__logo(href=dataFooter.logoLink)
        ='\n'
        img.footer__logo__img(src='assets/img/logo/'+dataFooter.logoSrc, alt=dataFooter.logoAlt)/
        ='\n'
      p.footer__description !{dataFooter.description}
      p.footer__copyright !{dataFooter.copyright}
='\n'
