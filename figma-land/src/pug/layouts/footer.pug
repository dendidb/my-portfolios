//footer
.footer
  .container
    .footer__menu.js-footer-accordion
      each val in dataFooter.menu
        .footer__menu__item
          if val.title
            h3.footer__title !{val.title}
          ul.footer__nav
            each item in val.nav
              li.footer__nav__item
                ='\n'
                a.footer__nav__link(href=item.link) !{item.title}
                ='\n'
    .footer__contact
      ='\n'
      each val in dataFooter.contact
        - data = val;
        .footer__contact__icon
          ='\n'
          i.footer__contact__icon-el(class='fl-'+val.iconClass)
          ='\n'
        .footer__contact__txt
          p.footer__contact__txt-el
           | !{val.text}
      ul.footer__sosmed
        each val in dataFooter.sosmed
          - data = val;
          li.footer__sosmed__icon
            ='\n'
            a.footer__sosmed__link(href=val.to)
              | !{val.text}
              ='\n'
              i.footer__sosmed__icon-el(class='fl-'+val.sosmedClass)
              ='\n'
='\n'
