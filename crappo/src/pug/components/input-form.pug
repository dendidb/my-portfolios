//-------------------------------------------------------------------------------
  @name: Input Form
  -------------------------------------------------------------------------------//

//input-form
.fi-row
  if data.label !== undefined
    label(class='fi-label' for=data.id) !{data.label}
  ='\n'
  if data.id === 'dropdown'
    .fi-dropdown
      ='\n'
      input(type=data.type class=data.class id=data.id name=data.name placeholder=data.placeholder data-target=data.target autocomplete='off' autofocus='on')/
      ='\n'
      p.fi-dropdown__text All Categories
      ul.fi-dropdown-menu
        each valDrop in data.dropdown
          li.fi-dropdown-item(data-value=valDrop.value) !{valDrop.text}
  else if data.id === 'message'
    textarea(class=data.class id=data.id name=data.name placeholder=data.placeholder data-target=data.target)
      if data.value
        | !{data.value}
  //- fi default
  else
    ='\n'
    input(type=data.type class=data.class id=data.id name=data.name placeholder=data.placeholder data-target=data.target autocomplete='off')/
    ='\n'

  //- element fi val & time
  if data.icon !== undefined
    ='\n'
    i(class=data.icon)

  //- error validation
  if data.target !== undefined
    p.fi-alert(id=data.target data-req=data.required data-invalid=data.invalid)
='\n'
//end-input-form
