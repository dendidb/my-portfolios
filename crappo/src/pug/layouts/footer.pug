//footer
.footer
  .container
    .footer__wrapper
      ='\n'
      a.footer__logo(href=footer.logo.to)
        ='\n'
        img.footer__logo__el(src='assets/img/logo/'+footer.logo.logoSrc alt=footer.logo.logoAlt)/
        ='\n'
      .footer__menu.js-accordion-menu
        each val in footer.menu
          .footer__menu__item
            h4.footer__menu__title
              | !{val.title}
            ul.footer__nav
              each item in val.nav
                li.footer__nav__item
                  ='\n'
                  a.footer__nav__link(href=item.to)
                    | !{item.text}
                  ='\n'
        .footer__payments
          h4.footer__payments__title
            | !{footer.payments.title}
          each paymentsItem in footer.payments.item
            li.footer__payments__item
              ='\n'
              a.footer__payments__link(href=paymentsItem.to)
                ='\n'
                img.footer__payments__img(src='assets/img/logo/'+paymentsItem.imgIcon alt=paymentsItem.imgAlt)/
                ='\n'
    .footer__bottom
      p.footer__bottom__copyright__title
        | !{footer.copyright.text}
      .footer__bottom__sosmed
        ul.footer__bottom__sosmed__nav
          each sosmedItem in footer.sosmed.item
            li.footer__bottom__sosmed__item
              ='\n'
              a.footer__bottom__sosmed__link(href=sosmedItem.to)
                ='\n'
                img.footer__bottom__sosmed__el(class=sosmedItem.class, src='assets/img/sosmed/'+sosmedItem.iconImg alt=sosmedItem.iconAlt)/
                ='\n'
                  
='\n'
//end-footer