//-------------------------------------------------------------------------------
  @name: Config
  @description: Config wesbite
  -------------------------------------------------------------------------------//

-
  // Suffix Title
  suffixSiteTitle = '| Covid-19 Alert';
  suffixSiteDescription = 'Covid-19 Alert';
  suffixSiteKeywords = 'covid-19, covid-19 alert, covid-19 website, covid-19 landing page';

  // Time Refresh
  timeRefresh = 1200;

  // Site App Name
  siteAppName = 'Covid-19 Alert';

  // Site Domain
  siteDomain = 'covid-19-alert.com';

  // Site URL
  siteURL = 'covid-19-alert.com';

  // Site Theme
  siteTheme = '#fb4c47';

  // Author
  author = 'Covid-19 Alert';
  copyright = '2022 Covid-19 Alert. All Rights Reserved';

  // SEO Frienldy
  seoFriendly = true;
  cannonical = 'covid-19-alert.com';

  // OG Facebook
  ogFacebook = {
    enable: true,
    url: 'https://www.facebook.com/covid-19-alert.com',
    type: 'website',
    section: 'home',
    published_time: '2019-04-26 17:35:30T+07:00',
    modified_time: '2019-04-26 17:35:30T+07:00',
    expiration_time: '2019-04-26 17:35:30T+07:00',
    image: 'assets/img/default/og-facebook.jpg',
    imageType: 'image/jpeg'
  };

  // Twitter Card
  twitterCard = {
    enable: true,
    twitterId: '@covid-19-alert',
    sizeCard: 'summary_large_image',
    image: 'assets/img/default/twitter-card.jpg'
  };

  // schema
  schema = {
    enable: true,
    url: siteURL,
    name: siteAppName,
    logo: siteURL + '/assets/img/logo/covid-alert.svg',
    contactPoint: {
      telephone: '+62-818-068-18424',
      contactType: 'sales',
      areaServed: 'ID'
    },
    sameAs: [
      'https://www.youtube.com',
      'https://www.linkedin.com',
      'https://www.facebook.com',
      'https://www.twitter.com'
    ],
    search: {
      enable: false,
      url: 'https://www.bilik.id/search/{search_term_string}?src=mc_google'
    }
  };

  // Manifest
  manifest = 'assets/js/data/manifest.json';

  // Icons
  icons = {

    // Web Favicon
    webFavicon: 'assets/img/homescreen/favicon.ico',

    // Add to Home Screen
    homescreen: {

      // Android
      android: {
        s16: 'assets/img/homescreen/favicon-16x16.png',
        s32: 'assets/img/homescreen/favicon-32x32.png',
        s96: 'assets/img/homescreen/favicon-96x96.png',
        s144: 'assets/img/homescreen/android-icon-144x144.png',
        s192: 'assets/img/homescreen/android-icon-192x192.png'
      },

      // Microsoft
      microsoft: {
        s144: 'assets/img/homescreen/ms-icon-144x144.png'
      },

      // iOS
      iOS: {
        default: 'assets/img/homescreen/apple-icon.png',
        s57: 'assets/img/homescreen/apple-icon-57x57.png',
        s60: 'assets/img/homescreen/apple-icon-60x60.png',
        s72: 'assets/img/homescreen/apple-icon-72x72.png',
        s76: 'assets/img/homescreen/apple-icon-76x76.png',
        s114: 'assets/img/homescreen/apple-icon-114x114.png',
        s120: 'assets/img/homescreen/apple-icon-120x120.png',
        s144: 'assets/img/homescreen/apple-icon-144x144.png',
        s152: 'assets/img/homescreen/apple-icon-152x152.png',
        s180: 'assets/img/homescreen/apple-icon-180x180.png'
      }
    }
  };

  //- Social Media
  socialMedia = [
    {
      network: 'youtube',
      url: 'https://www.youtube.com/covid-19-alert',
      logo: 'youtube'
    },
    {
      network: 'facebook',
      url: 'https://www.facebook.com/covid-19-alert',
      logo: 'facebook'
    },
    {
      network: 'instagram',
      url: 'https://www.instagram.com/covid-19-alert',
      logo: 'instagram-circle'
    },
    {
      network: 'twitter',
      url: 'https://twitter.com/covid-19-alert',
      logo: 'twitter-circle'
    }
  ];

  //- holdTransitionClass
  holdTransitionClass = 'hold-transition';


  //=======================================================
  //--------------------- ASSETS --------------------------
  //=======================================================

  // CSS
  //--- CSS: Main
  cssMain = 'assets/css/app.min.css';

  //--- JS
  //--- JS: Vendor
  jsVendor = 'assets/js/vendor.min.js';

  //--- JS: Main
  jsMain = 'assets/js/app.min.js';
