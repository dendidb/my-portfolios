//todo
.todo
  .container
    .todo__head
      h5.text.text-label !{dataTodo.label}
      h3.text.text-title !{dataTodo.title}
      p.text.text-desc !{dataTodo.desc}
    each val in dataTodo.list
      - data = val;
          .todo__body(class=data.modifier !== undefined ? 'todo--' + data.modifier : '')
              include ../components/todo.pug
='\n'
//end-todo